---
interface Props {
	title: string;
}

import {baseUri} from '../script/util.js';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={baseUri + "favicon.svg"} />
		<link rel="stylesheet" type="text/css" href={baseUri + "daf.css"} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<h1>{title}</h1>
		</header>
		<main><slot/></main>
		<footer>
			<p><a href={baseUri}>Overview</a> | <a href={baseUri + "matrix"}>Matrix</a></p>
		</footer>
	</body>
</html>
